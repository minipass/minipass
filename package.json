        "@radix-ui/react-slot": "^1.1.0",
        "@radix-ui/react-toast": "^1.2.2",
        "class-variance-authority": "^0.7.0",
        "clsx": "^2.1.1",
        "convex": "^1.26.2",
        "lucide-react": "^0.460.0",
        "next": "15.5.2",
        "react": "19.1.1",
        "react-dom": "19.1.1",
        "react-hook-form": "^7.55.0",
        "react-qr-code": "^2.0.15",
        "react-timeago": "^7.2.0",
        "stripe": "^17.3.1",
